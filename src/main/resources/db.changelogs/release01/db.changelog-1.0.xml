<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="1" author="pradeesh">
        <comment>Create user table and admin credentials</comment>
        <createTable tableName="ph_users">
            <column name="username" type="VARCHAR(45)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="boolean" defaultValueBoolean="false"/>
        </createTable>
        <insert tableName="ph_users" >
            <column name="username" value="admin"/>
            <column name="password" value="$2a$10$04TVADrR6/SPLBjsK0N30.Jf5fNjBugSACeGv1S69dZALR7lSov0y"/>
            <column name="enabled" value="true"/>
        </insert>
    </changeSet>
    <changeSet id="2" author="Anoop" failOnError="true">
        <comment>Create tables ph_customer_verification,ph_customer_details,ph_customer_address</comment>
        <createTable tableName="ph_customer_verification">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="verification_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="verification_desc" type="VARCHAR(100)"/>
        </createTable>
        <createTable tableName="ph_customer_details">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(40)">
                <constraints nullable="false"/>
            </column>
            <column name="midname" type="VARCHAR(50)"/>
            <column name="dob" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(1)">
                <constraints nullable="false"/>
            </column>
            <column name="contactnumber" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="emergencycontact" type="VARCHAR(15)"/>
            <column name="indian" type="boolean" defaultValueBoolean="true"/>
            <column name="verificationidtype" type="int"/>
            <column name="verificationrefnumber" type="VARCHAR(50)"/>
        </createTable>
        <createTable tableName="ph_customer_address">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address1" type="VARCHAR(150)"/>
            <column name="address2" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="pincode" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
            <column name="cutomer_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="cutomer_id"
                                 baseTableName="ph_customer_address"
                                 constraintName="fk_customer_address"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="ph_customer_details"/>
        <addForeignKeyConstraint baseColumnNames="verificationidtype"
                                 baseTableName="ph_customer_details"
                                 constraintName="fk_customer_verification"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="ph_customer_verification"/>

    </changeSet>
   
</databaseChangeLog>