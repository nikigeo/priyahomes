<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ph.admin.building.model.Building" table="ph_buildings">
        <id name="id" type="int">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="50" not-null="true" />
        </property>
        <property name="address1" type="string">
            <column name="address1" length="100" not-null="false" />
        </property>
        <property name="address2" type="string">
            <column name="address2" length="100" not-null="true" />
        </property>
        <property name="pincode" type="string">
            <column name="pincode" length="10" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
