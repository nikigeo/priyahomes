<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ph.customer.model.Customer" table="ph_customer_details">
        <id name="customerId" type="int">
            <column name="id" length="40" />
            <generator class="identity" />
        </id>
        <property name="firstName" type="string">
            <column name="firstname" length="50" not-null="true" />
        </property>
        <property name="lastName" type="string">
            <column name="lastname" length="50" not-null="false" />
        </property>
        <property name="midName" type="string">
            <column name="midname" length="50" not-null="true" />
        </property>
        <property name="dob" type="date" column="dob" not-null="true" />
        <property name="gender" type="string" column="gender" not-null="true"  length="1"/>
        <property name="contactNumber" type="string">
            <column name="contactnumber" length="15" not-null="true" />
        </property>
        <property name="emergencyContact" type="string" column="emergencycontact" not-null="false"  length="15"/>
        <property name="nonIndian" type="boolean">
            <column name="indian" not-null="true" />
        </property>


        <property name="verificationRefNumber" type="string">
            <column name="verificationrefnumber" length="50" not-null="false" />
        </property>

        <set name="customerAddresses" table="ph_customer_address" inverse="true" lazy="true" fetch="select" >
            <key>
                <column name="cutomer_id" not-null="true" />
            </key>
            <one-to-many class="com.ph.customer.model.CustomerAddress"/>
        </set>
    </class>
    <class name="com.ph.customer.model.CustomerAddress" table="ph_customer_address">
        <id name="addressId" type="int">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="houseStreetName" type="string">
            <column name="house_streetname" length="100" not-null="false" />
        </property>
        <property name="houseLocality" type="string">
            <column name="house_locality" length="100" not-null="true" />
        </property>
        <property name="state" type="string">
            <column name="state" length="50" not-null="true" />
        </property>
        <property name="country" type="string">
            <column name="country" length="50" not-null="true" />
        </property>
        <property name="phoneNumber" type="string">
            <column name="phone_number" length="100" not-null="true" />
        </property>
    </class>

</hibernate-mapping>
